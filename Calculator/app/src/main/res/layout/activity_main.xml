<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:text = ""
            android:textColor="@color/content"
            android:textSize="70sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="4">

        <Button
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/button_selector"
            android:text="7"
            android:textSize="40sp"
            android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/num8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="8"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/num9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="9"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="+"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>


            <Button
                android:id="@+id/num4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="4"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/num5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="40sp">

            </Button>

            <Button
                android:id="@+id/num6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="6"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="-"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/num1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="1"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>


            <Button
                android:id="@+id/num2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="2"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/num3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="3"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>


            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="*"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="AC"
                android:textSize="30sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/num0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="0"
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/decimal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="."
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/button_selector"
                android:text="="
                android:textSize="40sp"
                android:textColor="@color/white">
            </Button>
        </GridLayout>
    </RelativeLayout>
</LinearLayout>