<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <include
            android:id="@+id/title_layout"
            layout="@layout/common_title">

        </include>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <!--  packed up -->
                <LinearLayout
                    android:id="@+id/bmi_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="BMI"
                        android:textColor="@color/title"
                        android:textSize="25sp"
                        android:textStyle="bold">

                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/line_button">

                    </View>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp">

                        <TextView
                            android:id="@+id/height_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="HEIGHT"
                            android:textColor="@color/content"
                            android:textSize="16sp">

                        </TextView>


                        <EditText
                            android:id="@+id/height_edit"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_toStartOf="@+id/height_unit"
                            android:inputType="numberDecimal|numberSigned"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16sp">

                        </EditText>

                        <TextView
                            android:id="@+id/height_unit"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:text="m"
                            android:textColor="@color/content"
                            android:textSize="14sp">

                        </TextView>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp">

                        <TextView
                            android:id="@+id/weight_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="WEIGHT"
                            android:textColor="@color/content"
                            android:textSize="16sp">

                        </TextView>


                        <EditText
                            android:id="@+id/weight_edit"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_toStartOf="@+id/weight_unit"
                            android:inputType="numberDecimal|numberSigned"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16sp">

                        </EditText>

                        <TextView
                            android:id="@+id/weight_unit"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:text="kg"
                            android:textColor="@color/content"
                            android:textSize="14sp">

                        </TextView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp">

                        <TextView
                            android:id="@+id/result_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="RESULT"
                            android:textColor="@color/content"
                            android:textSize="16sp">

                        </TextView>


                        <TextView
                            android:id="@+id/result"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:text="123"
                            android:textColor="@color/content"
                            android:textSize="17sp">

                        </TextView>


                    </RelativeLayout>

                    <Button
                        android:id="@+id/calculate"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/line_button"
                        android:gravity="center"
                        android:text="Calculate"
                        android:textSize="18sp"
                        android:textColor="@color/white">

                    </Button>

                    <TextView
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="You are fat!!"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:visibility="gone">

                    </TextView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:layout_marginTop="30dp"

                    android:scaleType="fitStart"
                    android:src="@drawable/original">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="CURRENCY"
                    android:textColor="@color/title"
                    android:textSize="25sp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/line_button">

                </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="40dp">

                    <EditText
                        android:id="@+id/usd"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:inputType="numberDecimal|numberSigned"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16sp">

                    </EditText>

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="to"
                        android:textColor="@color/content"
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/aud"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:text="AUD"
                        android:textColor="@color/content"
                        android:textSize="16sp">

                    </TextView>

                </RelativeLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>